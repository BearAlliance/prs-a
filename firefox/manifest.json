{

  "description": "Analyzes sentiment of comments on github pull requests",
  "manifest_version": 2,
  "name": "PRS-A - Pull Request Sentiment Analyzer",
  "version": "1.0",
  "homepage_url": "https://github.com/olore/something",
  "icons": {
    "48": "favicon.ico"
  },
  "permissions": [
    "*://developer.mozilla.org/*",
    "activeTab",
    "notifications",
    "storage",
    "tabs",
    "webRequest"
  ],
  "background": {
    "scripts": [
      "jquery-3.3.1.min.js",
      "background-worker.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*/issues/*",
        "*://*.github.com/*/pull/*"
      ],
      "js": [
        "jquery-3.3.1.min.js",
        "content-script.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "PRS-A - Pull Request Sentiment Analyzer",
    "default_icon": {
      "16": "favicon.ico",
      "32": "favicon.ico"
    },
    "show_matches": [
      "*://*.github.com/*/issues/*",
      "*://*.github.com/*/pull/*"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }

}